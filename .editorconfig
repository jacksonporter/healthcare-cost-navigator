root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{py,ini,json,toml}]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{md,txt}]
trim_trailing_whitespace = false

[*.toml]
indent_style = space
indent_size = 4

[pyproject.toml]
indent_style = space
indent_size = 4

[poetry.lock]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
